{
	"compilerOptions": {
		"baseUrl": ".",
		"esModuleInterop": true,
		"module": "CommonJS",
		"moduleResolution": "node",
		"outDir": "dist",
		"resolveJsonModule": true,
		"sourceMap": true,
		"strict": true,
		"target": "es6",
		"paths": {
			"*": [
				"node_modules/*",
				"src/types/*"
			],
			"@": ["src/"],
			"@/*": ["src/*"]
		}
	},
	"include": [
		"src/**/*"
	]
}
